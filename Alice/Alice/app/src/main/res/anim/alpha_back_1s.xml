<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:duration="1000"
        android:fromAlpha="0.0"
        android:toAlpha="1.0"
        />
    <!--
            fromAlpha 属性为动画起始时透明度
            toAlpha   属性为动画结束时透明度
                0.0表示完全透明
                1.0表示完全不透明
            duration  属性为动画持续时间
    -->
</set>