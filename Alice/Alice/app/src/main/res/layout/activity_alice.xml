<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:background="@color/APP_Main_Back_Color"
    android:id="@+id/activity_alice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alice.sniper.cn.alice.Hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--   TitleLayout   -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_Color"
                    android:text="@string/HomePage_Title"
                    android:textSize="30dp"/>

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/open_btn"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    toggle:tbOnColor="#a6a6a6"
                    toggle:tbOffColor="#565656"
                    toggle:tbSpotColor="#000000"
                    toggle:tbOffBorderColor="#333333"
                    toggle:tbBorderWidth="0.1dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
        </LinearLayout>
<!--============================================================================================-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/my_viewpager"
                    />

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="说话"
                    android:id="@+id/speak_btn"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="写字"
                    android:id="@+id/write_btn"
                    />
                </LinearLayout>
</RelativeLayout>
    </LinearLayout>
</RelativeLayout>
