<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:background="@color/APP_Main_Back_Color"
    android:id="@+id/activity_alice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alice.sniper.cn.alice.Hi">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_Color"
        android:text="@string/HomePage_Title"
        android:textSize="30dp"/>


    <com.zcw.togglebutton.ToggleButton
        android:id="@+id/open_btn"
        android:layout_width="45dp"
        toggle:tbOnColor="#a6a6a6"
        toggle:tbOffColor="#565656"
        toggle:tbSpotColor="#000000"
        toggle:tbOffBorderColor="#333333"
        toggle:tbBorderWidth="0.1dp"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp">
        </com.zcw.togglebutton.ToggleButton>


    <Button
        android:id="@+id/start_say"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal="true"
        android:background="@color/button_End_Color"
        android:textColor="@color/button_Text_Color"
        android:text="@string/StartSay"/>

    <TextView
        android:id="@+id/start_say_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/text_Color"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
