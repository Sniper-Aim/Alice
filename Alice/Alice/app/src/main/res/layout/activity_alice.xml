<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:background="@color/APP_Main_Back_Color"
    android:id="@+id/activity_alice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alice.sniper.cn.alice.Hi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--   TitleLayout   -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_Color"
                    android:text="@string/HomePage_Title"
                    android:textSize="30dp"/>

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/open_btn"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    toggle:tbOnColor="#a6a6a6"
                    toggle:tbOffColor="#565656"
                    toggle:tbSpotColor="#000000"
                    toggle:tbOffBorderColor="#333333"
                    toggle:tbBorderWidth="0.1dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">


            <!--这个是切换布局,  这个是打字布局-->
            <RelativeLayout
                android:id="@+id/main_input_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/APP_Main_Back_Color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_Color"
                    android:textSize="30dp"
                    android:text="打字界面"/>


            </RelativeLayout>



            <!--这个布局是主页切换布局, 这个是上一层布局  也就是说话的布局-->
            <RelativeLayout
                android:id="@+id/main_say_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/APP_Main_Back_Color">
                <TextView
                    android:id="@+id/start_say_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_Color"
                    android:textSize="30dp"
                    android:text="@string/StartSay"/>




            </RelativeLayout>
        </RelativeLayout>


        <!--沉于最下面的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/start_say"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/button_End_Color"
                    android:textColor="@color/button_Text_Color"
                    android:text="@string/StartSay"/>

                <Button
                    android:id="@+id/main_switch_input_button"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/APP_Main_Back_Color"
                    android:textColor="@color/button_Text_Color"
                    android:text="切换"/>





            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
